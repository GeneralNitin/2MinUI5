<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="sap.ui.demo.controller.App">
    <Button
        text="increment by 1"
        press=".incrementBy1"/>
    <Text id="counter" text="0"/>

    <List
        id="episodeOverview"
        headerText="{apiDataModel>/0/brand}"
        items="{apiDataModel>/}"
        growingThreshold="15"
        growing="true"
        growingScrollToLoad="true">

        <items>
            <StandardListItem
                title="{apiDataModel>brand}"
                description="{apiDataModel>equipment}"/>
        </items>
    </List>
</mvc:View>